<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/design_default_color_primary_dark</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

    </style>

    <style name="textColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#0044BB</item>

    </style>


</resources>
